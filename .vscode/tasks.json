{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "args": ["run"],
    "isShellCommand": true,
    "tasks": [{
        "taskName": "build",
        "showOutput": "always",
        "echoCommand": true,
        "problemMatcher": "$tsc-watch",
        "isBuildCommand": true,
        "isWatching": false
    }, {
        "taskName": "test",
        "showOutput": "always",
        "echoCommand": true,
        "isTestCommand": true,
        "isWatching": false
    }]
}